---
import { Linkedin } from "lucide-astro";

// ✅ CV dans /public → accessible via /Cv-Carre-Arthur.pdf
const cvPath = "/Cv-Carre-Arthur.pdf";
---

<footer class="relative w-full mt-auto overflow-hidden">
  {/* Fond comme le header */}
  <div
    class="absolute inset-0 bg-[#2F5D62] border-t border-theme-10 shadow-sm z-0"
  >
  </div>

  <div
    class="relative z-10 flex flex-col md:flex-row items-center justify-between py-8 px-6 md:px-12 gap-6"
  >
    <div
      class="text-2xl md:text-[32px] font-black uppercase title-font text-white"
    >
      ARTHUR CARRÉ
    </div>

    <nav
      class="flex flex-wrap justify-center items-center gap-6 md:gap-8 text-base font-bold uppercase"
    >
      <a
        href="/work"
        class="footer-link transition-all duration-300 text-white hover:opacity-80"
      >
        MES PROJETS
      </a>

      <a
        href={cvPath}
        download
        class="footer-link footer-cta border border-white/20 bg-white text-[#2F5D62] rounded-full px-5 py-2 transition-all duration-300"
      >
        TÉLÉCHARGER MON CV
      </a>

      <a
        href="https://www.linkedin.com/in/arthur-carr%C3%A9-1b63aa307/"
        target="_blank"
        rel="noopener noreferrer"
        class="footer-social transition-all duration-300 text-white"
        aria-label="LinkedIn"
      >
        <Linkedin class="w-7 h-7 text-white" stroke-width="1.5" />
      </a>
    </nav>
  </div>

  {/* Barre du bas */}
  <div
    class="relative z-10 border-t border-white/10 py-3 text-center text-xs text-white/60 uppercase"
  >
    <p>© 2026 Arthur Carré — Tous droits réservés</p>
  </div>
</footer>

<style>
  /* Underline animé comme le header */
  .footer-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    transform: translateZ(0);
  }

  .footer-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -8px;
    height: 3px;
    width: 100%;
    background: white;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 300ms ease;
    border-radius: 999px;
    opacity: 0.9;
  }

  .footer-link:hover::after {
    transform: scaleX(1);
  }

  .footer-link:hover {
    transform: translateY(-2px);
  }

  /* ----------------------------- */
  /* CTA (CV) : hover plus discret */
  /* ----------------------------- */

  /* Pas d'underline animé sur le bouton */
  .footer-cta::after,
  .footer-cta:hover::after {
    display: none;
  }

  /* Pas de "lift" global sur le CTA */
  .footer-cta:hover {
    transform: none;
  }

  /* Effet subtil (pro) */
  .footer-cta {
    box-shadow: none;
    transition:
      background-color 200ms ease,
      transform 200ms ease,
      opacity 200ms ease;
  }

  .footer-cta:hover {
    background-color: rgba(255, 255, 255, 0.95);
    transform: translateY(-1px);
  }

  .footer-cta:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.9);
    outline-offset: 3px;
  }

  /* ----------------------------- */
  /* LinkedIn : plus pro / discret */
  /* ----------------------------- */

  .footer-social {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    transition:
      transform 200ms ease,
      opacity 200ms ease,
      filter 200ms ease;
  }

  /* Plus de rotation, juste un micro feedback */
  .footer-social:hover {
    transform: scale(1.08);
    opacity: 0.8;
  }

  .footer-social:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.9);
    outline-offset: 4px;
    border-radius: 999px;
  }
</style>
