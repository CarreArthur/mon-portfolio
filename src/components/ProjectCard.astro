---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { MoveUpRight } from "lucide-astro";

interface Props {
  title: string;
  category: string;
  year: string;
  image: ImageMetadata;
  tags: string[];
  slug: string;
}

const { title, category, year, image, tags, slug } = Astro.props;
---

<a href={"/projects/" + slug} class="group block w-full mb-16 cursor-pointer">
  <div class="relative overflow-hidden bg-theme/5 mb-5">
    <Image
      src={image}
      alt={title}
      width={800}
      loading="lazy"
      class="w-full h-full object-cover transition-transform duration-700 ease-[0.25,1,0.5,1] group-hover:scale-105"
    />

    <div
      class="absolute inset-0 transition-colors duration-500"
      style="background-color: transparent;"
    >
    </div>
  </div>

  <div
    class="flex flex-col gap-3 border-t pt-4"
    style="border-top-color:#2F5D62;"
  >
    <div class="flex justify-between items-start">
      <h3
        class="text-2xl md:text-[32px] font-bold title-font uppercase -tighter transition-colors duration-300"
        style="color:#403A37;"
      >
        {title}
      </h3>

      <span
        class="opacity-0 -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
        style="color:#2F5D62;"
      >
        <MoveUpRight class="w-5 h-5" />
      </span>
    </div>

    <div class="flex justify-between items-end mt-1">
      <div>
        <p
          class="text-base font-bold uppercase mb-1 transition-colors duration-300"
          style="color:#403A37;"
        >
          {category}
        </p>
        <span class="text-xs font-mono" style="color: rgba(30,30,30,0.55);">
          ({year})
        </span>
      </div>

      <div class="flex gap-2">
        {
          tags.slice(0, 3).map((tag) => (
            <span
              class="hidden md:inline-block text-xs uppercase -wider px-2 py-1 rounded-full transition-all duration-300"
              style="background-color:#2F5D62;color:white;"
            >
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</a>

<style>
  /* Hover overlay image */
  a.group:hover .absolute.inset-0 {
    background-color: rgba(192, 240, 0, 0.12);
  }

  /* Hover title */
  a.group:hover h3 {
    color: #2f5d62;
  }
</style>
