---
import Layout from "../layouts/Layout.astro";
---

<Layout title="À Propos | Portfolio">
  <main class="px-6 md:px-12 py-32 md:pt-48 min-h-screen">
    <div class="grid md:grid-cols-12 gap-12">
      <div class="md:col-span-12 mb-12">
        <h1
          class="text-6xl md:text-9xl font-bold title-font uppercase -tighter text-title"
        >
          À propos de moi
        </h1>
      </div>
      <div class="md:col-span-5 text-2xl md:text-3xl leading-snug font-medium">
        <p></p>
      </div>
      <div
        class="md:col-span-6 md:col-start-7 flex flex-col gap-12 text-lg text-muted leading-relaxed"
      >
        <p>.</p>
        <div>
          <h3 class="text-title title-font font-bold uppercase text-sm mb-4">
            Services
          </h3><ul class="grid grid-cols-2 gap-2">
            <li>Art Direction</li><li>Web Design</li><li>Branding</li><li>
              Motion
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="mt-24 w-full h-[50vh] bg-panel overflow-hidden">
      <img
        src="https://images.unsplash.com/photo-1542038784456-1ea6388dd2e6?q=80&w=2000&auto=format&fit=crop"
        class="w-full h-full object-cover grayscale"
        alt="Workspace"
      />
    </div>
  </main>
</Layout>
