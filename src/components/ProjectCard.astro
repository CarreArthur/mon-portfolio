---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { MoveUpRight } from "lucide-astro";

interface Props {
  title: string;
  category: string;
  year: string;
  image: ImageMetadata;
  tags: string[];
  slug: string;
}

const { title, category, year, image, tags, slug } = Astro.props;
---

<a href={"/projects/" + slug} class="group block w-full mb-16 cursor-pointer">
  <div class="relative overflow-hidden bg-theme/5 mb-5">
    <Image
      src={image}
      alt={title}
      width={800}
      loading="lazy"
      class="w-full h-full object-cover transition-transform duration-700 ease-[0.25,1,0.5,1] group-hover:scale-105"
    />

    <div
      class="absolute inset-0 bg-theme/0 group-hover:bg-theme/10 transition-colors duration-500"
    >
    </div>
  </div>

  <div class="flex flex-col gap-3 border-t border-theme-10 pt-4">
    <div class="flex justify-between items-start">
      <h3
        class="text-2xl md:text-3xl font-bold title-font uppercase -tighter text-theme transition-colors duration-300 group-hover:text-title"
      >
        {title}
      </h3>

      <span
        class="text-title opacity-0 -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300"
      >
        <MoveUpRight class="w-5 h-5" />
      </span>
    </div>

    <div class="flex justify-between items-end mt-1">
      <div>
        <p class="text-sm font-bold uppercase text-title mb-1">
          {category}
        </p>
        <span class="text-xs font-mono text-theme/50">
          ({year})
        </span>
      </div>

      <div class="flex gap-2">
        {
          tags
            .slice(0, 3)
            .map((tag) => (
              <span class="hidden md:inline-block text-[10px] uppercase -wider border border-theme-20 px-2 py-1 rounded-full text-theme/60 group-hover:opacity-90 group-hover:text-title transition-colors duration-300">
                {tag}
              </span>
            ))
        }
      </div>
    </div>
  </div>
</a>
