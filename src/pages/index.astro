---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";

// On affiche les 4 premiers projets
const featuredProjects = projects.slice(0, 2);
---

<Layout title="Arthur Carré | MMI Student & Web Marketing Assistant">
  <Hero />

  <section
    class="px-6 md:px-12 py-12 md:py-12 border-t border-theme-10 bg-theme"
  >
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-end mb-20 md:mb-32 gap-8"
    >
      <h2
        class="text-6xl md:text-8xl font-bold title-font uppercase leading-[0.85] text-title"
      >
        Mes <span class="text-title">Projets</span>
      </h2>

      <a
        href="/work"
        class="group flex items-center gap-3 text-sm font-bold uppercase text-theme hover:text-title transition-colors duration-300 pb-2 border-b border-theme-20 hover:opacity-80"
      >
        Voir tous les projets
        <span
          class="group-hover:translate-x-2 transition-transform duration-300"
          >→</span
        >
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16 md:gap-y-32">
      {
        featuredProjects.map((project, i) => (
          // Décalage de la colonne de droite pour le rythme visuel
          <div class={i % 2 !== 0 ? "md:mt-32" : ""}>
            <ProjectCard
              {...project}
              image={project.cover}
              tags={project.tags || []}
            />
          </div>
        ))
      }
    </div>
  </section>
</Layout>
