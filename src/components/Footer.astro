---
import { Linkedin } from "lucide-astro";

// ✅ CV dans /public → accessible via /Cv-Arthur.pdf
const cvPath = "/Cv-Arthur.pdf";
---

<footer class="relative w-full mt-auto overflow-hidden">
  {/* Fond comme le header */}
  <div
    class="absolute inset-0 bg-[#C0F000] border-t border-theme-10 shadow-sm z-0"
  >
  </div>

  <div
    class="relative z-10 flex flex-col items-center justify-center py-16 px-6 md:px-12 gap-8"
  >
    <div
      class="text-3xl md:text-4xl font-black uppercase title-font text-[#1E1E1E]"
    >
      ARTHUR CARRÉ
    </div>

    <nav
      class="flex flex-wrap justify-center items-center gap-8 md:gap-12 text-sm font-bold uppercase"
    >
      <a
        href="/work"
        class="footer-link transition-all duration-300 text-[#1E1E1E] hover:opacity-80"
      >
        MES PROJETS
      </a>

      <a
        href={cvPath}
        download
        class="footer-link footer-cta border bg-[#1E1E1E] text-[#FFFFFF] rounded-full px-4 py-2 transition-all duration-300"
      >
        TÉLÉCHARGER MON CV
      </a>
    </nav>

    <a
      href="https://www.linkedin.com/in/arthur-carr%C3%A9-1b63aa307/"
      target="_blank"
      rel="noopener noreferrer"
      class="footer-social transition-all duration-300 text-[#1E1E1E]"
      aria-label="LinkedIn"
    >
      <Linkedin class="w-10 h-10 text-[#1E1E1E]" stroke-width="1.5" />
    </a>
  </div>

  {/* Barre du bas */}
  <div
    class="relative z-10 border-t border-theme-10 bg-[#1E1E1E] text-[#FFFFFF] py-4 text-center text-xs uppercase"
  >
    <p>© 2026 Arthur Carré — Tous droits réservés</p>
  </div>
</footer>

<style>
  /* Underline animé comme le header */
  .footer-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    transform: translateZ(0);
  }

  .footer-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -8px;
    height: 3px;
    width: 100%;
    background: #1e1e1e;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 300ms ease;
    border-radius: 999px;
    opacity: 0.9;
  }

  .footer-link:hover::after {
    transform: scaleX(1);
  }

  .footer-link:hover {
    transform: translateY(-2px);
  }

  /* ----------------------------- */
  /* CTA (CV) : hover plus discret */
  /* ----------------------------- */

  /* Pas d'underline animé sur le bouton */
  .footer-cta::after,
  .footer-cta:hover::after {
    display: none;
  }

  /* Pas de "lift" global sur le CTA */
  .footer-cta:hover {
    transform: none;
  }

  /* Effet subtil (pro) */
  .footer-cta {
    box-shadow: none;
    transition:
      background-color 200ms ease,
      filter 200ms ease,
      opacity 200ms ease;
  }

  .footer-cta:hover {
    background-color: #2a2a2a;
    filter: brightness(1.05);
  }

  .footer-cta:focus-visible {
    outline: 2px solid rgba(192, 240, 0, 0.9);
    outline-offset: 3px;
  }

  /* ----------------------------- */
  /* LinkedIn : plus pro / discret */
  /* ----------------------------- */

  .footer-social {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    transition:
      transform 200ms ease,
      opacity 200ms ease,
      filter 200ms ease;
  }

  /* Plus de rotation, juste un micro feedback */
  .footer-social:hover {
    transform: scale(1.04);
    filter: brightness(0.95);
    opacity: 0.95;
  }

  .footer-social:focus-visible {
    outline: 2px solid rgba(30, 30, 30, 0.9);
    outline-offset: 4px;
    border-radius: 999px;
  }
</style>
